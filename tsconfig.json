{
	"compilerOptions": {
		"target": "es6",
		"module": "commonjs",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"outDir": "./dist",
		"declaration": true,
		"useDefineForClassFields": false
	},
	"include": ["src/**/*.ts"],
	"exclude": ["node_modules"]
}
