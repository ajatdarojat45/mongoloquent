{
	"name": "mongoloquent",
	"version": "3.9.0",
	"description": "Mongoloquent is a lightweight MongoDB ORM library for Javascript/Typescript",
	"main": "dist/index.js",
	"types": "dist/index.d.ts",
	"files": [
		"dist"
	],
	"scripts": {
		"test": "jest --detectOpenHandles --runInBand --verbose  --forceExit --coverage --watchAll",
		"build": "tsc",
		"start": "ts-node src/index.ts",
		"prepublishOnly": "npm run build",
		"dev": "nodemon --exec ts-node sandbox.ts",
		"release": "standard-version",
		"release:check": "standard-version -- --dry-run",
		"prepare": "husky",
		"format": "prettier format . --write",
		"lint": "prettier lint .",
		"check": "prettier check ."
	},
	"lint-staged": {
		"*.ts": [
			"eslint --fix",
			"prettier --write"
		],
		"*.{json,md}": [
			"prettier --write"
		]
	},
	"keywords": [
		"javascript",
		"typescript",
		"database",
		"nosql",
		"mongodb",
		"orm",
		"mongoloquent",
		"nodejs"
	],
	"author": {
		"name": "Ajat Darojat",
		"email": "ajatdarojat45@gmail.com",
		"url": "https://ajatdarojat45.id"
	},
	"license": "MIT",
	"dependencies": {
		"dayjs": "^1.11.10",
		"dotenv": "^16.3.2"
	},
	"devDependencies": {
		"@eslint/eslintrc": "^3.3.1",
		"@eslint/js": "^9.34.0",
		"@trivago/prettier-plugin-sort-imports": "^5.2.2",
		"@types/jest": "^29.5.11",
		"@types/node": "^20.11.5",
		"eslint": "^9.34.0",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-prettier": "^5.5.4",
		"husky": "^9.1.7",
		"jest": "^29.7.0",
		"lint-staged": "^16.1.2",
		"mongodb": "^6.18.0",
		"prettier": "^3.6.2",
		"standard-version": "^9.5.0",
		"ts-jest": "^29.1.2",
		"ts-node": "^10.9.2",
		"typescript": "^5.3.3",
		"typescript-eslint": "^8.40.0"
	},
	"peerDependencies": {
		"mongodb": "^6.18.0"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/ajatdarojat45/mongoloquent.git"
	},
	"funding": {
		"type": "GitHub",
		"url": "https://github.com/sponsors/ajatdarojat45"
	},
	"bugs": {
		"url": "https://github.com/ajatdarojat45/mongoloquent/issues",
		"email": "ajatdarojat45@gmail.com"
	},
	"homepage": "https://mongoloquent.com"
}
